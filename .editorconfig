# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.{yml,yaml,java,kt,xml,jsp,ts,tsx,json}]
indent_size = 2

[*.{cpp,hpp,c,h}]
indent_size = 2
